@model MvcOnlineTicariOtomasyon.Models.Classes.Urun
@{
    ViewBag.Title = "UrunEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="account-settings-container layout-top-spacing">
    <div class="account-content">
        <div class="scrollspy-example" data-spy="scroll" data-target="#account-settings-scroll" data-offset="-100">
            <div class="row">
                <div class="col-lg-12 col-12  layout-spacing">
                    <div class="statbox widget box box-shadow">
                        <div class="widget-header">
                            <div class="row">
                                <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                    <h4>Yeni Ürün Ekleme Sayfası</h4>
                                </div>
                            </div>
                        </div>
                        <div class="widget-content widget-content-area">
                            <form method="post">
                                <div class="form-group mb-4">
                                    <label>Ürün AD</label>
                                    <input type="text" class="form-control" name="urunAd" placeholder="Ürün Ad">
                                </div>
                                <div class="form-group mb-4">
                                    <label>Ürün Marka</label>
                                    <input type="text" class="form-control" name="marka" placeholder="Ürün Marka">
                                </div>
                                <div class="form-group mb-4">
                                    <label>Ürün Stok</label>
                                    <input type="text" class="form-control" name="stok" placeholder="Ürün Stok">
                                </div>
                                <div class="form-group mb-4">
                                    <label>Ürün Alış Fiyatı</label>
                                    <input type="text" class="form-control" name="alisFiyati" placeholder="Ürün Alış Fiyatı">
                                </div>
                                <div class="form-group mb-4">
                                    <label>Ürün Satış Fiyatı</label>
                                    <input type="text" class="form-control" name="satisFiyati" placeholder="Ürün Satış Fiyatı">
                                </div>
                                <div class="form-group mb-4">
                                    <label>Ürün Kategori</label>
                                    @Html.DropDownListFor(x => x.KategoriID, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control"})
                                    @*<input type="text" class="form-control" name="KategoriID" placeholder="Ürün Kategori">*@
                                </div>
                                <div class="form-group mb-4">
                                    <label>Ürün Görsel</label>
                                    <input type="text" class="form-control" name="urunGorsel" placeholder="Ürün Görsel">
                                </div>
                                <button class="btn btn-primary"> Kaydet</button>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
