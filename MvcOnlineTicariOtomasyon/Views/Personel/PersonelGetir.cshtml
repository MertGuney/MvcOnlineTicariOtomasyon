@model MvcOnlineTicariOtomasyon.Models.Classes.Personel
@{
    ViewBag.Title = "PersonelGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="account-settings-container layout-top-spacing">
    <div class="account-content">
        <div class="scrollspy-example" data-spy="scroll" data-target="#account-settings-scroll" data-offset="-100">
            <div class="row">
                <div class="col-lg-12 col-12  layout-spacing">
                    <div class="statbox widget box box-shadow">
                        <div class="widget-header">
                            <div class="row">
                                <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                    <h4>Cari Güncelleme Sayfası</h4>
                                </div>
                            </div>
                        </div>
                        <div class="widget-content widget-content-area">
                            @using (Html.BeginForm("PersonelGuncelle", "Personel", FormMethod.Post))
                            {
                                <div class="form-group mb-4">
                                    <label>Personel AD</label>
                                    @Html.TextBoxFor(x => x.personelAd, new { @class = "form-control" })
                                </div>
                                <div class="form-group mb-4">
                                    <label>Cari Soyad</label>
                                    @Html.TextBoxFor(x => x.personelSoyad, new { @class = "form-control" })
                                </div>
                                <div class="form-group mb-4">
                                    <label>Cari Şehir</label>
                                    @Html.TextBoxFor(x => x.personelGorsel, new { @class = "form-control" })
                                </div>
                                <div class="form-group mb-4">
                                    <label>Personel Departman</label>
                                    @Html.DropDownListFor(x => x.DepartmanID, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })
                                </div>
                                @Html.HiddenFor(x => x.personelID)
                                <button class="btn btn-primary"> Güncelle</button>
                            }
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

