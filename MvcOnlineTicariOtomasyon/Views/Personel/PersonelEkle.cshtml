@model MvcOnlineTicariOtomasyon.Models.Classes.Personel
@{
    ViewBag.Title = "PersonelEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="account-settings-container layout-top-spacing">
    <div class="account-content">
        <div class="scrollspy-example" data-spy="scroll" data-target="#account-settings-scroll" data-offset="-100">
            <div class="row">
                <div class="col-lg-12 col-12  layout-spacing">
                    <div class="statbox widget box box-shadow">
                        <div class="widget-header">
                            <div class="row">
                                <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                    <h4>Yeni Personel Ekleme Sayfası</h4>
                                </div>
                            </div>
                        </div>
                        <div class="widget-content widget-content-area">
                            <form method="post">
                                <div class="form-group mb-4">
                                    <label>Personel AD</label>
                                    <input type="text" class="form-control" name="personelAd" placeholder="Cari Ad">
                                </div>
                                <div class="form-group mb-4">
                                    <label>Personel Soyad</label>
                                    <input type="text" class="form-control" name="personelSoyad" placeholder="Cari Soyad">
                                </div>
                                <div class="form-group mb-4">
                                    <label>Personel Görsel</label>
                                    <input type="text" class="form-control" name="personelGorsel" placeholder="Cari Şehir">
                                </div>
                                <div class="form-group mb-4">
                                    <label>Personel Departman</label>
                                    @Html.DropDownListFor(x => x.DepartmanID, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })
                                </div>
                                <button class="btn btn-primary"> Kaydet</button>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
