@using MvcOnlineTicariOtomasyon.Models.Classes
@model List<Personel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="account-settings-container layout-top-spacing">
    <div class="account-content">
        <div class="scrollspy-example" data-spy="scroll" data-target="#account-settings-scroll" data-offset="-100">
            <div class="row">
                <div id="tableFooter" class="col-lg-12 col-12 layout-spacing">
                    <div class="statbox widget box box-shadow">
                        <div class="widget-header">
                            <div class="row">
                                <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                    <h4>Personel</h4>
                                </div>
                            </div>
                        </div>
                        <div class="widget-content widget-content-area">
                            <div class="table-responsive">
                                <table class="table table-bordered table-hover table-condensed mb-4">

                                    <thead>
                                        <tr>
                                            <th>Personel ID</th>
                                            <th>Personel Ad Soyad</th>
                                            <th>Personel Görsel</th>
                                            <th>Personel Departman</th>
                                            <th>Güncelle</th>
                                            <th>Detay</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var x in Model)
                                        {
                                            <tr>
                                                <td>@x.personelID</td>
                                                <td>@x.personelAd @x.personelSoyad</td>
                                                <td><img src="@x.personelGorsel" style="width:75px;height:75px;"></td>
                                                <td>@x.Departman.departmanAd</td>
                                                <td><a href="/Personel/PersonelGetir/@x.personelID" class="btn btn-warning mb-2 mr-2 btn-rounded">Güncelle<svg> ... </svg></a></td>
                                                <td><a href="/Departman/DepartmanPersonelSatıs/@x.personelID" class="btn btn-primary mb-2 mr-2 btn-rounded">Detay<svg> ... </svg></a></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <a href="/Personel/PersonelEkle" class="btn btn-info mb-2 mr-2 btn-rounded">Yeni Ekle<svg> ... </svg></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
