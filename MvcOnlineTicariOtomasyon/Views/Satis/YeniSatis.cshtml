@model MvcOnlineTicariOtomasyon.Models.Classes.SatisHareket
@{
    ViewBag.Title = "YeniSatis";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="account-settings-container layout-top-spacing">
    <div class="account-content">
        <div class="scrollspy-example" data-spy="scroll" data-target="#account-settings-scroll" data-offset="-100">
            <div class="row">
                <div class="col-lg-12 col-12  layout-spacing">
                    <div class="statbox widget box box-shadow">
                        <div class="widget-header">
                            <div class="row">
                                <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                    <h4>Yeni Satış Ekleme Sayfası</h4>
                                </div>
                            </div>
                        </div>
                        <div class="widget-content widget-content-area">
                            <form method="post">
                                <div class="form-group mb-4">
                                    <label>Ürün</label>
                                    @Html.DropDownListFor(x => x.UrunID, (List<SelectListItem>)ViewBag.urun, new { @class = "form-control" })
                                </div>
                                <div class="form-group mb-4">
                                    <label>Cari</label>
                                    @Html.DropDownListFor(x => x.CariID, (List<SelectListItem>)ViewBag.cari, new { @class = "form-control" })
                                </div>
                                <div class="form-group mb-4">
                                    <label>Personel</label>
                                    @Html.DropDownListFor(x => x.PersonelID, (List<SelectListItem>)ViewBag.pers, new { @class = "form-control" })
                                </div>
                                <div class="form-group mb-4">
                                    <label>Adet</label>
                                    <input type="text" class="form-control" name="adet" placeholder="Adet">
                                </div>
                                <div class="form-group mb-4">
                                    <label>Fiyat</label>
                                    <input type="text" class="form-control" name="fiyat" placeholder="Fiyat">
                                </div>
                                <div class="form-group mb-4">
                                    <label>Toplam</label>
                                    <input type="text" class="form-control" name="toplamTutar" placeholder="Toplam Tutar">
                                </div>
                                <button class="btn btn-primary"> Satış Yap</button>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
