@model MvcOnlineTicariOtomasyon.Models.Classes.SatisHareket
@{
    ViewBag.Title = "SatisGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="account-settings-container layout-top-spacing">
    <div class="account-content">
        <div class="scrollspy-example" data-spy="scroll" data-target="#account-settings-scroll" data-offset="-100">
            <div class="row">
                <div class="col-lg-12 col-12  layout-spacing">
                    <div class="statbox widget box box-shadow">
                        <div class="widget-header">
                            <div class="row">
                                <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                    <h4>Satış Güncelleme Sayfası</h4>
                                </div>
                            </div>
                        </div>
                        <div class="widget-content widget-content-area">
                            @using (Html.BeginForm("Guncelle", "Satis", FormMethod.Post))
                            {
                                <div class="form-group mb-4">
                                    <label>Ürün AD</label>
                                    @Html.DropDownListFor(x => x.UrunID, (List<SelectListItem>)ViewBag.urun, new { @class = "form-control" })
                                </div>
                                <div class="form-group mb-4">
                                    <label>Cari</label>
                                    @Html.DropDownListFor(x => x.CariID, (List<SelectListItem>)ViewBag.cari, new { @class = "form-control" })
                                </div>
                                <div class="form-group mb-4">
                                    <label>Personel</label>
                                    @Html.DropDownListFor(x => x.PersonelID, (List<SelectListItem>)ViewBag.pers, new { @class = "form-control" })
                                </div>
                                <div class="form-group mb-4">
                                    <label>Adet</label>
                                    @Html.TextBoxFor(x => x.adet, new { @class = "form-control" })
                                </div>
                                <div class="form-group mb-4">
                                    <label>Fiyat</label>
                                    @Html.TextBoxFor(x => x.fiyat, new { @class = "form-control" })
                                </div>
                                <div class="form-group mb-4">
                                    <label>Toplam Fiyat</label>
                                    @Html.TextBoxFor(x => x.toplamTutar, new { @class = "form-control" })
                                </div>
                                @Html.HiddenFor(x => x.satisID)
                                <button class="btn btn-primary"> Güncelle</button>
                            }
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
