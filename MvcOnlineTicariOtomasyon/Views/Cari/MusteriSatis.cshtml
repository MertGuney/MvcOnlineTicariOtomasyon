@using MvcOnlineTicariOtomasyon.Models.Classes
@model List<SatisHareket>
@{
    ViewBag.Title = "MusteriSatis";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="account-settings-container layout-top-spacing">
    <div class="account-content">
        <div class="scrollspy-example" data-spy="scroll" data-target="#account-settings-scroll" data-offset="-100">
            <div class="row">
                <div id="tableFooter" class="col-lg-12 col-12 layout-spacing">
                    <div class="statbox widget box box-shadow">
                        <div class="widget-header">
                            <div class="row">
                                <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                    <h4>Cari : @ViewBag.cari</h4>
                                </div>
                            </div>
                        </div>
                        <div class="widget-content widget-content-area">
                            <div class="table-responsive">
                                <table class="table table-bordered table-hover table-condensed mb-4">

                                    <thead>
                                        <tr>
                                            <th>Satış ID</th>
                                            <th>Ürün</th>
                                            <th>Personel</th>
                                            <th>Fiyat</th>
                                            <th>Adet</th>
                                            <th>Toplam</th>
                                            <th>Tarih</th>
                                            <th>Yazdır</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var x in Model)
                                        {
                                            <tr>
                                                <td>@x.satisID</td>
                                                <td>@x.Urun.urunAd</td>
                                                <td>@x.Personel.personelAd @x.Personel.personelSoyad</td>
                                                <td>@x.fiyat</td>
                                                <td>@x.adet</td>
                                                <td>@x.toplamTutar</td>
                                                <td>@x.tarih</td>
                                                <td class="text-center"><button class="btn btn-primary">Yazdır</button> </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



