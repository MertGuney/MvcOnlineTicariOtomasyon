@using MvcOnlineTicariOtomasyon.Models.Classes
@model List<Faturalar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="account-settings-container layout-top-spacing">
    <div class="account-content">
        <div class="scrollspy-example" data-spy="scroll" data-target="#account-settings-scroll" data-offset="-100">
            <div class="row">
                <div id="tableFooter" class="col-lg-12 col-12 layout-spacing">
                    <div class="statbox widget box box-shadow">
                        <div class="widget-header">
                            <div class="row">
                                <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                    <h4>Fatura</h4>
                                </div>
                            </div>
                        </div>
                        <div class="widget-content widget-content-area">
                            <div class="table-responsive">
                                <table class="table table-bordered table-hover table-condensed mb-4">

                                    <thead>
                                        <tr>
                                            <th>Fatura ID</th>
                                            <th>Seri No</th>
                                            <th>Sıra No</th>
                                            <th>Vergi Daire</th>
                                            <th>Tarih</th>
                                            <th>Saat</th>
                                            <th>Toplam</th>
                                            <th>Teslim Eden</th>
                                            <th>Teslim Alan</th>
                                            <th>Güncelle</th>
                                            <th>Detay</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var x in Model)
                                        {
                                            <tr>
                                                <td>@x.faturaID</td>
                                                <td>@x.faturaSeriNo</td>
                                                <td>@x.faturaSiraNo</td>
                                                <td>@x.vergiDairesi</td>
                                                <td>@x.tarih</td>
                                                <td>@x.saat</td>
                                                <td>@x.toplam</td>
                                                <td>@x.teslimEden</td>
                                                <td>@x.teslimAlan</td>
                                                <td><a href="/Fatura/FaturaGetir/@x.faturaID" class="btn btn-primary mb-2 mr-2 btn-rounded">Güncelle<svg> ... </svg></a></td>
                                                <td><a href="/Fatura/FaturaDetay/@x.faturaID" class="btn btn-primary mb-2 mr-2 btn-rounded">Detay<svg> ... </svg></a></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <a href="/Fatura/FaturaEkle" class="btn btn-info mb-2 mr-2 btn-rounded">Yeni Ekle<svg> ... </svg></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

