@model MvcOnlineTicariOtomasyon.Models.Classes.Faturalar
@{
    ViewBag.Title = "FaturaEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="account-settings-container layout-top-spacing">
    <div class="account-content">
        <div class="scrollspy-example" data-spy="scroll" data-target="#account-settings-scroll" data-offset="-100">
            <div class="row">
                <div class="col-lg-12 col-12  layout-spacing">
                    <div class="statbox widget box box-shadow">
                        <div class="widget-header">
                            <div class="row">
                                <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                    <h4>Yeni Fatura Ekle</h4>
                                </div>
                            </div>
                        </div>
                        <div class="widget-content widget-content-area">
                            <form method="post">
                                <div class="form-group mb-4">
                                    <label>Seri No</label>
                                    <input type="text" class="form-control" name="faturaSeriNo" placeholder="">
                                </div>
                                <div class="form-group mb-4">
                                    <label>Sıra No</label>
                                    <input type="text" class="form-control" name="faturaSiraNo" placeholder="">
                                </div>
                                <div class="form-group mb-4">
                                    <label>Vergi Dairesi</label>
                                    <input type="text" class="form-control" name="vergiDairesi" placeholder="">
                                </div>
                                <div class="form-group mb-4">
                                    <label>Saat</label>
                                    <input type="text" class="form-control" name="saat" placeholder="">
                                </div>
                                <div class="form-group mb-4">
                                    <label>Toplam</label>
                                    <input type="text" class="form-control" name="toplam" placeholder="">
                                </div>
                                <div class="form-group mb-4">
                                    <label>Teslim Eden</label>
                                    <input type="text" class="form-control" name="teslimEden" placeholder="">
                                </div>
                                <div class="form-group mb-4">
                                    <label>Teslim Alan</label>
                                    <input type="text" class="form-control" name="teslimAlan" placeholder="">
                                </div>
                                <button class="btn btn-primary"> Kaydet</button>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

